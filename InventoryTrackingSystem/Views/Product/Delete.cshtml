@model Product

<!DOCTYPE html>
<html>
<head>
    <title>Delete Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center text-danger">Delete Product</h1>
        <p>Are you sure you want to delete this product?</p>
        <h4>@Model.Name</h4>
        <dl class="row">
            <dt class="col-sm-2">SKU</dt>
            <dd class="col-sm-10">@Model.SKU</dd>

            <dt class="col-sm-2">Stock</dt>
            <dd class="col-sm-10">@Model.Stock</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.Category?.Name</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post" asp-route-id ="Id">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger" asp-route-id="Id">Delete</button>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
